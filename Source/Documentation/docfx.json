{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "Bifrost/*.csproj",
            "Bifrost.Client/*.csproj",
            "Bifrost.Content/*.csproj",
            "Bifrost.FluentValidation/*.csproj",
            "Bifrost.Web/*.csproj",
          ],
          "cwd": "../"
        }
      ],
      "dest": "obj/api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml"
        ],
        "cwd": "."
      },
      {
        "files": [
          "api/*.md",
          "articles/**.md",
          "Frontend/**.md",
          "toc.yml",
          "*.md",
          "**.yml"
        ],
        "cwd": "../../Documentation"
      }
    ],
    "resource": [
      {
        "files": [
          "*.jpg",
          "*.png"
        ],
        "cwd": "../../Documentation"
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "dest": "_site",
    "template": [
      "default",
      "../../Documentation/Template"
    ]
  }
}